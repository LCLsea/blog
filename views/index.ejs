<% include header %>
<% posts.forEach(function (post, index) { %>
<div class="essay">
  <p><h2 style="border-bottom: 1px solid #CCCCCC;">
    <a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">
    <%= post.title %></a></h2></p>
    <a href="/u/<%= post.name %>">
      <img src="<%= post.head %>" class="r_head" /></a>
  <p class="info">
    作者：<a href="/u/<%= post.name %>"><%= post.name %></a> |
    日期：<%= post.time.minute %> |
    標籤：<% post.tags.forEach(function (tag, index){ %>
     <% if (tag) { %>
      <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
     <% } %>
    <% }) %>
    <% if (post.reprint_info.reprint_from) { %>
      <br /><a href=:'/u/<%= post.reprint_info.reprint_from.name %>/
        <%= post.reprint_info.reprint_from.day %>/
        <%= post.reprint_info.reprint_from.title %>'>原文連結</a>
    <% } %>
  </p>
  <p><%- post.post %></p>
  <p class="info">閱讀： <%= post.pv %> | 評論： <%= post.comments.length %></p>
</div>
<% }) %>
<% include paging %>
<% include footer %>
